#include <iostream>

using namespace std;

int main(){
    string Command;
    cout << "You have now entered the gym room" << endl;
    cin >> Command;
    if (Command == "help")
    { // help menu is not my code i have only intergrated it from another group member
        cout << "************************************************\n"  
                "                   Help Menu\n"
                "************************************************\n"
                "\nMovements:\n\n"
